<% layout("/layouts/boilerplate") %>

<div class="container">
    <div class="row mt-3 mb-5">
        <div class="col-8 offset-2">
            <h3 class="mb-4 fw-bold"><%= listing.title %></h3>
            
            <!-- Image Card -->
            <div class="card mb-4 border-0">
                <img src="<%= listing.image %>" class="card-img-top" alt="Listing Image" style="height: 40vh; object-fit: cover; border-radius: 20px;">
            </div>

            <!-- Details Section -->
            <div class="card border-0 p-4">
                <h4 class="card-title fw-bold mb-3">Details </h4>
                <p class="card-text text-secondary mb-3" style="font-size: 1.1rem;">
                    <%= listing.description %>
                </p>
                <h5 class="mb-3 fw-bold">â‚¹ <%= listing.price.toLocaleString("en-IN") %></h5>
                <p class="card-text mb-3">
                    <i class="fa-solid fa-location-dot me-2" style="color: #fa424d;"></i>
                    <%= listing.location %>, <%= listing.country %>
                </p>

                <!-- Buttons -->
                <div class="mt-4">
                    <a href="/listings/<%= listing._id %>/edit" class="btn btn-light px-4 py-2 me-2" style="background-color: #fa424d; color: white;">
                        Edit
                    </a>
                    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" style="display: inline;">
                        <button class="btn btn-dark px-4 py-2">Delete</button>
                    </form>
                </div>
            </div>
            <br>
            <div class="mb-4 border-0 ">
                <h4>Leave a Review</h4>
                <form method="POST" action="/listings/<%= listing._id %>/reviews" novalidate class="needs-validation">
                    <div class="mb-3 mt-3">
                        <label for="rating" class="form-label">Rating</label>
                        <input type="range" class="form-range" min="1" max="5" step="1" id="rating" 
                        name="review[rating]" />
                    </div>
                    <div class="mb-3 mt-3">
                        <label for="comment" class="form-label">Comment</label>
                        <textarea id="comment" 
                        name="review[comment]" 
                        placeholder="Enter your review here" 
                        class="form-control" 
                        rows="3" required></textarea> 
                        <div class="invalid-feedback">Please provide a comment.</div>

                    </div>
                    <button type="submit" class="btn btn-dark px-4 py-2">Submit Review</button> 
                </form>
                <hr/>
                <div>
                    <p class="fw-bold">Reviews:</p>
                    <div class="row">
                        <% for(review of listing.reviews) { %>
                            <div class="col-md-6 mb-3">
                                <div class="card p-3">
                                    <div class="card-body">
                                        <h5 class="card-title">Rating: <%= review.rating %> &#9733;</h5>
                                        <p class="card-text"><%= review.comment %></p>
                                        <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                                            <button class="btn btn-sm btn-dark">Delete</button>
                                    </div>
                                </div>
                            </div>      
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 15px;
    }
</style>
