<% layout("/layouts/boilerplate") %>

<div class="container">
    <div class="row mt-3 mb-5">
        <div class="col-8 offset-2">
            <h3 class="mb-4 fw-bold"><%= listing.title %></h3>
            
            <!-- Image Card -->
            <div class="card mb-4 border-0">
                <img src="<%= listing.image.url %>" class="card-img-top" alt="Listing Image" style="height: 40vh; object-fit: cover; border-radius: 20px;">
            </div>

            <!-- Details Section -->
            <div class="card border-0 p-4">
                <h4 class="card-title fw-bold mb-3">Details </h4>
                <p class="card-text mb-3"><b>Owned by:</b> <%= listing.owner ? listing.owner.username : 'Unknown' %></p>
                <p class="card-text text-secondary mb-3" style="font-size: 1.1rem;">
                    <%= listing.description %>
                </p>
                <h5 class="mb-3 fw-bold">â‚¹ <%= listing.price.toLocaleString("en-IN") %></h5>
                <p class="card-text mb-3">
                    <i class="fa-solid fa-location-dot me-2" style="color: #fa424d;"></i>
                    <%= listing.location %>, <%= listing.country %>
                </p>

                <!-- Buttons -->
                <% if(currentUser && currentUser._id.equals(listing.owner._id)) { %>
                <div class="mt-4">
                    <a href="/listings/<%= listing._id %>/edit" class="btn btn-light px-4 py-2 me-2" style="background-color: #fa424d; color: white;">
                        Edit
                    </a>
                    <form 
                        method="POST" 
                        action="/listings/<%= listing._id %>?_method=DELETE"
                        style="display: inline;"
                        onsubmit="return confirm('Are you sure you want to delete this listing?');">
                        <button class="btn btn-dark px-4 py-2">Delete</button>
                    </form>
                </div>
                <% } %>
            </div>
            <br>
            <div class="mb-4 border-0 ">
                <% if(currentUser) { %>
                <h4>Leave a Review</h4>
                <form method="POST" action="/listings/<%= listing._id %>/reviews" novalidate class="needs-validation">
                    <div class="mb-3 mt-3">
                        <label for="rating" class="form-label">Rating</label>
                        <fieldset class="starability-slot">
                            <legend> Stars:</legend>
                            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                            <label for="first-rate1" title="Terrible">1 star</label>
                            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                            <label for="first-rate2" title="Not good">2 stars</label>
                            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                            <label for="first-rate3" title="Average">3 stars</label>
                            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                            <label for="first-rate4" title="Very good">4 stars</label>
                            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                            <label for="first-rate5" title="Amazing">5 stars</label>
                        </fieldset>
                    </div>
                    <div class="mb-3 mt-3">
                        <label for="comment" class="form-label">Comment</label>
                        <textarea id="comment" 
                        name="review[comment]" 
                        placeholder="Enter your review here" 
                        class="form-control" 
                        rows="3" required></textarea> 
                        <div class="invalid-feedback">Please provide a comment.</div>

                    </div>
                    <button type="submit" class="btn btn-dark px-4 py-2">Submit Review</button> 
                </form>
                <% } else { %>
                    <p>Please <a href="/login">log in</a> to leave a review.</p>
                <% } %>
                <hr/>
                <% if(listing.reviews.length > 0) { %>
                <div>
                    <p class="fw-bold">Reviews:</p>
                    <div class="row">
                        <% for(review of listing.reviews) { %>
                            <div class="col-md-6 mb-3">
                                <div class="card p-3">
                                    <div class="card-body">
                                        <h5 class="card-title">Rating: <%= review.rating %> &#9733;</h5>
                                        <p class="starability-result card-text" data-rating="<%= review.rating %>">Rated: <%= review.rating %> stars</p>
                                        <h6 class="card-subtitle mb-2 text-muted">By: <i><%= review.author.username %></i></h6>
                                        <p class="card-text"><%= review.comment %></p>
                                        <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                                            <% if(currentUser && currentUser._id.equals(review.author._id)) { %>
                                            <button class="btn btn-sm btn-dark">Delete</button>
                                            <% } %>
                                        </form>
                                    </div>
                                </div>
                            </div>      
                        <% } %>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
        <div class="col-8 offset-2 mb-5">
            <h3 class="mb-4 fw-bold">Location</h3>
            <div id="map"></div>
        </div>
    </div>
</div>



<style>
    .card {
        border-radius: 15px;
    }
</style>
