        <a href="/listings/<%= listing.id %>" class="listing-link">
           <div class="col">
            <div class="card h-100">
                <img src="<%= listing.image %>" class="card-img-top" alt="Listing Image" style="height: 20rem;" >
                <div class="card-img-overlay"></div>
                <div class="card-body">
                    <p class="card-text">
                        <b><%= listing.title %></b><br>
                        <strong>Price:</strong> â‚¹<%= listing.price.toLocaleString("en-IN") %><br>
                    </p>
                </div>
            </div>
        </div> 
        </a>
        
    <% } %>
</div>

    
</body>
